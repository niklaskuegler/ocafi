<div class="navbar-wagon mobile-padding-right">
  <!-- Logo -->
  <div class="slogan-logo-container">
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "ocafi_logo.svg", height: 50 %>
    <% end %>
    <div class="vertical-align-link-slogan">
      <div class="navbar-a-slogan">
        <%= link_to "Ocafi Trading", "/", class: "navbar-slogan-ocafi ocafi-trading-slogan" %>
      </div>
    </div>
  </div>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <div class="link-container vertical-align-link ">
      <div class="navbar-a">
        <%= link_to "Das Team", "/about-us", class: "navbar-wagon-item navbar-wagon-link vertical-align-link-a" %>
      </div>
    </div>


    <div class="link-container vertical-align-link ">
      <div class="farmers-testing">
        <div class="navbar-a nav-item-dropdown">
          <%= link_to "Die Farmer", "/farmers", class: "navbar-wagon-item navbar-wagon-link vertical-align-link-a dropdown-trigger" %>
          <ul class="dropdown-menu">
            <li class="dropdown-menu-item">
              <a class="styling" href="/farmers/fazenda-matao">Fazenda Mataõ</a>
            </li>
            <li class="dropdown-menu-item">
              <a class="styling" href="/farmers/fazenda-alianca">Fazenda Aliança</a>
            </li>
            <li class="dropdown-menu-item">
              <a class="styling" href="/farmers/fazenda-santa-alina">Fazenda Santa Alina</a>
            </li>
          </ul>
        </div>
      </div>
    </div>





    <div class="link-container vertical-align-link">
      <div class="navbar-a">
        <%= link_to "Misson & Vision", "/mission-vision", class: "navbar-wagon-item navbar-wagon-link vertical-align-link-a" %>
      </div>
    </div>

    <div class="link-container vertical-align-link">
      <div class="navbar-a">
         <%= link_to "Spotlist", "/coffees", class: "navbar-wagon-item navbar-wagon-link vertical-align-link-a" %>
      </div>
    </div>

    <% if user_signed_in? %>


      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if user_signed_in? %>
            <div class="dropdown">
              <div class="link-container">
              <div class="farmers-testing">
                <div class="navbar-a nav-item-dropdown">
                  <p class="navbar-wagon-item navbar-wagon-link vertical-align-link-a dropdown-trigger">Wilkommen, <%= current_user.username %></p>
                  <ul class="dropdown-menu spacing-top-private">
                    <!--<li class="dropdown-menu-item">
                      <%= link_to "#" do %>
                        <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                      <% end %>
                    </li>-->
                    <li class="dropdown-menu-item">
                      <%= link_to destroy_user_session_path, method: :delete do %>
                        <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
                      <% end %>
                    </li>
                  </ul>
                </div>
              </div>
              </div>



              <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                <li>
                <%= link_to "#" do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <% end %>
              </li>
              <!--<li>
                <%= link_to "#" do %>
                  <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
                <% end %>
              </li>
            -->
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
            </ul>
            </div>
          <% end %>

        </div>
      </div>
      <div class="link-container">
        <div class="navbar-a">
          <div class="cart-styling">

            <% if current_order.bags >= 1 %>
              <% if current_order.bags == 1 %>
                <%= link_to "#{current_order.bags} Sack im", cart_path, class: "navbar-wagon-item navbar-wagon-cart-link vertical-align-link-a vertical-align-link-a-no-padding-right" %>
              <% else %>
                <%= link_to "#{current_order.bags} Säcke im", cart_path, class: "navbar-wagon-item navbar-wagon-cart-link vertical-align-link-a vertical-align-link-a-no-padding-right" %>
              <% end %>
            <% elsif current_order.order_items.count >= 1 %>
              <% if current_order.order_items.count == 1 %>
                <%= link_to "#{current_order.order_items.count} Probe im", cart_path, class: "navbar-wagon-item navbar-wagon-cart-link vertical-align-link-a vertical-align-link-a-no-padding-right" %>
              <% else %>
                <%= link_to "#{current_order.order_items.count} Proben im", cart_path, class: "navbar-wagon-item navbar-wagon-cart-link vertical-align-link-a vertical-align-link-a-no-padding-right" %>
              <% end %>
            <% else %>
              <%= link_to "#{current_order.bags} Säcke im", cart_path, class: "navbar-wagon-item navbar-wagon-cart-link vertical-align-link-a vertical-align-link-a-no-padding-right" %>
            <% end %>



            <div class="cart-icon vertical-align-cart-svg">
              <%= render "/carts/cart_svg" %>
            </div>
          </div>
        </div>
      </div>
      <% else %>
      <!-- Login link (when logged out) -->
      <div class="link-container vertical-align-link ">
        <div class="navbar-a">
          <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link vertical-align-link-a" %>
        </div>
      </div>

    <% end %>
  </div>




  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <% if user_signed_in? %>
        <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "About Us", "/about-us", class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "Farmers", "/farmers", class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "Misson & Vision", "/mission-vision", class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "Spotlist", "/coffees", class: "navbar-wagon-item navbar-wagon-link" %></li>
          <!--<li><%= link_to "#" do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li> -->
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      <% else %>
        <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "About Us", "/about-us", class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "Farmers", "/farmers", class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "Misson & Vision", "/mission-vision", class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "Spotlist", "/coffees", class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        </ul>

      <% end %>
    </div>
  </div>

</div>


