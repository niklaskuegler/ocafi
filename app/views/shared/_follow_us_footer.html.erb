<div class="follow_us_basics row">
  <div class="follow_us_section col-md-4 col-md-offset-4">
    <div class="logo-sizing">
      <%= image_tag "ocafi_logo.svg", height: 175 %>
    </div>
    <div class="follow_us_links">
      <div class="follow-us-inner">
        <div class="follow-us-p">
          <a class="fab fa-facebook-square icon_style" target="_blank" rel="noopener noreferrer" href="https://www.facebook.com/ocafi/"></a>
        </div>
        <div class="follow-us-p">
          <a class="fab fa-instagram icon_style" style="padding-left: 3%" target="_blank" rel="noopener noreferrer" href="https://www.instagram.com/ocafi/"></a>
        </div>
      </div>
    </div>
  </div>
  <div class="follow_us_section_newsletter col-md-4 col-xs-offset-2 col-md-offset-0">
    <div class="vertical-align-wrap-newsletter">
      <div class="vertical-align-newsletter vertical-align--middle-newsletter">
      <% render 'shared/form_newsletter_condensed' %>
      </div>
    </div>

  </div>

</div>

