<% @farmers.coffees.each do |coffee| %>

  <div class="container-text-content">
    <div class="header_coffee header_coffee_padding">
      <div class="text-padding-ocafi ">
        <h5 class="farm-discription-headers"><%= @farmers.first_name %> <%= @farmers.last_name %>'s <%= coffee.variety.upcase %></h5>
      </div>
    </div>
  </div>

  <div class="image_section">
    <div class="image_section_content row">
      <div class=" col-md-6 container-text-content text-alignment card-flavor-and-info">
        <div class="flavor-and-info">
          <h5 class="farm-discription-headers">Technical Information</h5><br>
          <ul class="flavor-profile">
            <li class="flavor-profile-item"><p class="text-description">Region: </p><p><%= @farmers.region %></p></li>
            <li class="flavor-profile-item"><p class="text-description">Crop Year: </p><p><%= coffee.year %></p></li>
            <li class="flavor-profile-item"><p class="text-description">Process Type: </p><p><%= coffee.process %></p></li>
            <li class="flavor-profile-item"><p class="text-description">Variety: </p><p><%= coffee.variety %></p></li>
        </div>
        </ul>
      </div>
      <div class=" col-md-6 container-text-content border-left text-alignment card-flavor-and-info">
        <h5 class="farm-discription-headers">Flavor Profile</h5><br>
        <ul class="flavor-profile">
          <li class="flavor-profile-item">
            <div class="flavor-description">
              <div class="flavor-unique" style=" background-image: url('<%= coffee.flavor1_image  %>')"></div>
            </div>
              <p class="margin-top-vertical-align"><%= coffee.flavor1 %></p>
          </li>
          <li class="flavor-profile-item">
            <div class="flavor-description">
              <div class="flavor-unique" style=" background-image: url('<%= coffee.flavor2_image  %>')"></div>
            </div>
              <p class="margin-top-vertical-align"><%= coffee.flavor2 %></p>
          </li>
          <li class="flavor-profile-item">
            <div class="flavor-description">
              <div class="flavor-unique" style=" background-image: url('<%= coffee.flavor3_image  %>')"></div>
            </div>
              <p class="margin-top-vertical-align"><%= coffee.flavor3 %></p>
          </li>

        </ul>
      </div>
    </div>
  </div>

<% end %>



