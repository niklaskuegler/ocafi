<div class="image_wrapper-our-coffee-show ">


  <div class="container-text-content">
    <div class="header_coffee header_coffee_padding">
      <div class="text-padding-ocafi ">
        <% if @farmers.coffees.length == 1 %>
          <h5 class="farm-discription-headers">About this farms coffee</h5>
        <% else %>
          <h5 class="farm-discription-headers">About this farms first coffee</h5>
        <% end %>
      </div>
    </div>
  </div>



  <div class="image_section">
    <div class="image_section_content row">
      <div class=" col-md-6 container-text-content text-alignment card-flavor-and-info">
        <h5 class="farm-discription-headers">Technical Information</h5><br>
        <ul class="flavor-profile">
          <li class="flavor-profile-item"><p class="text-description">Region: </p><p><%= @farmers.region %></p></li>
          <li class="flavor-profile-item"><p class="text-description">Crop Year: </p><p><%= @farmers.coffees.first.year %></p></li>
          <li class="flavor-profile-item"><p class="text-description">Process Type: </p><p><%= @farmers.coffees.first.process %></p></li>
          <li class="flavor-profile-item"><p class="text-description">Variety: </p><p>Catuai</p></li>
        </ul>
      </div>
      <div class=" col-md-6 container-text-content border-left text-alignment card-flavor-and-info">
        <h5 class="farm-discription-headers">Flavor Profile</h5><br>
        <ul class="flavor-profile">
          <li class="flavor-profile-item">
            <div class="flavor-description">
              <div class="vanilla"></div>
            </div>
              <p class="margin-top-vertical-align"><%= @farmers.coffees.first.flavor1 %></p>
          </li>
          <li class="flavor-profile-item">
            <div class="flavor-description">
              <div class="caramell"></div>
            </div>
              <p class="margin-top-vertical-align"><%= @farmers.coffees.first.flavor2 %></p>
          </li>
          <li class="flavor-profile-item">
            <div class="flavor-description">
              <div class="chocolate"></div>
            </div>
              <p class="margin-top-vertical-align"><%= @farmers.coffees.first.flavor3 %></p>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <% if @farmers.coffees.length == 2 %>

    <div class="container-text-content">
      <div class="header_coffee header_coffee_padding">
        <div class="text-padding-ocafi ">
          <h5 class="farm-discription-headers">About this farms second coffee</h5>
        </div>
      </div>
    </div>

    <div class="image_section">
      <div class="image_section_content row">
        <div class=" col-md-6 container-text-content text-alignment card-flavor-and-info">
          <h5 class="farm-discription-headers">Technical Information</h5><br>
          <ul class="flavor-profile">
            <li class="flavor-profile-item"><p class="text-description">Region: </p><p><%= @farmers.region %></p></li>
            <li class="flavor-profile-item"><p class="text-description">Crop Year: </p><p><%= @farmers.coffees.second.year %></p></li>
            <li class="flavor-profile-item"><p class="text-description">Process Type: </p><p><%= @farmers.coffees.second.process %></p></li>
            <li class="flavor-profile-item"><p class="text-description">Variety: </p><p>Catuai</p></li>
          </ul>
        </div>
        <div class=" col-md-6 container-text-content border-left text-alignment card-flavor-and-info">
          <h5 class="farm-discription-headers">Flavor Profile</h5><br>
          <ul class="flavor-profile">
            <li class="flavor-profile-item">
              <div class="flavor-description">
                <div class="vanilla"></div>
              </div>
                <p class="margin-top-vertical-align"><%= @farmers.coffees.second.flavor1 %></p>
            </li>
            <li class="flavor-profile-item">
              <div class="flavor-description">
                <div class="caramell"></div>
              </div>
                <p class="margin-top-vertical-align"><%= @farmers.coffees.second.flavor2 %></p>
            </li>
            <li class="flavor-profile-item">
              <div class="flavor-description">
                <div class="chocolate"></div>
              </div>
                <p class="margin-top-vertical-align"><%= @farmers.coffees.second.flavor3 %></p>
            </li>
          </ul>
        </div>
      </div>
    </div>

  <% else %>
  <% end %>

</div>
