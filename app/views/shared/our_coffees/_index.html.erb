<div class="image_wrapper">
  <div class="container-coffee">
    <div class="row">
      <% @farmers.each do |farmer| %>
        <div class="col-xs-12 col-md-6 col-lg-4">
          <!-- insert <div class="card"> -->
          <div class="card grow">
            <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path @farmer.farmer_photo, height: 300, width: 400, crop: :fill %>')" >

            </div>
            <div class="text-part">
              <div class="vertical-align-wrap-coffee">
                <div class="vertical-align-coffee vertical-align--middle-coffee">
                  <div class="items-center">
                    <h4><%= farmer.farm_name %> <br></h4>
                    <h4><%= farmer.first_name %> <%= farmer.last_name %> <br></h4>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
